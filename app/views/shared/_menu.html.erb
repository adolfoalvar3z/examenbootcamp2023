<header class="bg-primary text-white text-center py-4">
  <a class="navbar-brand" href="<%= root_path %>">
    <h1>Veterinaria MiMascota</h1>
  </a>
  <p>Tu mejor opción para el cuidado de tus mascotas.</p>
</header>
<nav class="navbar navbar-expand-sm navbar-dark bg-primary">
  <div class="container">
    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId"
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav me-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link active" href="<%= root_path %>" aria-current="page">Inicio <span class="visually-hidden">(current)</span></a>
        </li>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="<%= user_session_path %>">Ingresar</a>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="<%= clientes_path %>">Clientes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= mascota_path %>">Mascotas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= veterinarios_path %>">Veterinarios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= cita_path %>">Citas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= servicios_path %>">Servicios</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name %></a>
            <div class="dropdown-menu" aria-labelledby="dropdownId">
              <a class="dropdown-item" href="#">Editar</a>
              <hr>
              <%= button_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class:"dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
      <% end %>
    </div>
  </div>
</nav>
<% if notice.present? %>
  <p class="notice alert alert-warning" role="alert"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="notice alert alert-danger" role="alert"><%= alert %></p>
<% end %>
