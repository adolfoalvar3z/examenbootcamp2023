<%= form_with(model: cliente, local: true, html: { class: "form" }) do |form| %>
  <% if cliente.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibieron guardar este cliente:</h2>

      <ul>
        <% cliente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nombre, class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :apellido, class: "form-label" %>
    <%= form.text_field :apellido, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :direccion, class: "form-label" %>
    <%= form.text_field :direccion, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :telefono, class: "form-label" %>
    <%= form.text_field :telefono, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
