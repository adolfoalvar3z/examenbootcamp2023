<h1>Mascota</h1>
<%= link_to "New mascotum", new_mascotum_path, class:"btn btn-primary my-3" %>
<div id="mascota">
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Especie</th>
        <th scope="col">Raza</th>
        <th scope="col">Fecha_nacimiento</th>
        <th scope="col">Cliente</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
        <% @mascota.each do |mascotum| %>
          <tr class="">
            <td scope="row"><%= mascotum.nombre %></td>
            <td><%= mascotum.especie %></td>
            <td><%= mascotum.raza %></td>
            <td><%= mascotum.fecha_nacimiento %></td>
            <td><%= mascotum.cliente.nombre %></td>
            <td><%= link_to "Show this mascotum", mascotum %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
